{
	"restartable": "rs",
	"ignore": [
		".git",
		"node_modules/**/node_modules"
	],
	"verbose": true,
	"execMap": {
		"js": "babel-node",
		"": "babel-node"
	},
	"events": {
		"restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
	},
	"watch": ["*.*"],
	"env": {
		"NODE_ENV": "development"
	},
	"ext": "js json",
	"legacy-watch": false
}